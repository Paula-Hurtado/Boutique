<div class="jumbotron bg-dark">
<h1 class="title text-center">WISH LIST!</h1>
</div>

<div class = "container">
    <div class = "row">
<% current_user.wish_list_outfits.each do |outfit| %>
    <div class="col-4">
        <div class="card my-card" style="width: 18rem; border-color: white;">
          <%= link_to(image_tag(outfit.picture, class: "my-pic"), outfit) %>
          <div class="card-body bg-dark">
            <p class="card-text">
            <p class="font">photo by: <%= link_to outfit.user.username, outfit.user, class:"font"%></p>
          </div>
        </div>
        </div>
<% end %>



<p class = "margen"> <%= link_to "back", outfits_path, class: "btn btn-info"%></p>