<div class="jumbotron bg-dark">
<h1 class="title text-center">HAPPY SHOPPING!</h1>
</div>

<button type="button" class="btn btn-outline-success button link_2"><%= link_to "Add", new_outfit_path %> </button>

<div class = "container">
    <div class = "row">
          <% @outfits.each do |outfit| %>
            <div class="col-4">
              <div class="card my-card" style="width: 18rem; border-color: white;">
                <%= link_to(image_tag(outfit.picture, class: "my-pic"), outfit) %>
                <div class="card-body bg-dark">
                  <p class="card-text">
                  <p class="font">photo by: <%= link_to outfit.user.username, outfit.user, class:"font"%></p>
                </div>
              </div>
              </div>
          <% end %>
    </div>
</div>
